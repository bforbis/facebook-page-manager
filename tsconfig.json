{
  "compilerOptions": {
    "target": "ES2017",
    "module": "commonjs",
    "declaration": true,
    "sourceMap": true,
    "strict": true,
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "*": [ "node_modules/*", "src/@types/*" ]
    },
    "rootDirs": ["src"],
    "outDir": "dist",
    "esModuleInterop": true
  },
  "include": [
    "src/**/*.ts"
   ],
  "exclude": [
    "node_modules"
  ]
}
